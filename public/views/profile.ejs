    <h1 class="mb-4">Blog Articles</h1>
    <a href="articles/newmd" class="btn btn-success">New Articles</a>
    <% if(articles.length>1){articles.forEach(article =>{ %>
    <div class="card mt-4">
      <div class="card-body">
        <h4 class="card-title"><%= article.title %></h4>
        <div clas="card-subtitle text-muted mb-2">
          <%= article.created_date %>
        </div>
        <div class="card-text mb-2"><%= article.description %></div>
        <a href="articles/<%= article.slug %>" class="btn btn-primary"
          >Read More</a
        >
        <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
        <form
          action="/articles/<%= article.id %>?_method=DELETE"
          method="POST"
          class="d-inline"
        >
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <% })} %>
  </div>
