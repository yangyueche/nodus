<!DOCTYPE html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Signin Signup</title>

  <link href="../styles/userSign.css" rel="stylesheet" />
  <!-- <script src="components/header.js" type="text/javascript"></script>
  <script src="components/footer.js" type="text/javascript"></script> -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous"
  />
  <style>
    .content {
      position: relative;
      margin-top: 200px;
      display: flex;
      justify-content: space-evenly;
    }
    #top-section {
      margin-top: 50px;
    }
  </style>
  <link rel="stylesheet" href="../styles/header.css" />
</head>

<body>
  <%- include("components/header") %>
  <div class="row justify-content-center align-items-center" id="top-section">
    <div class="col-4"><h1 class="mt-5">Welcome to Nodus!</h1></div>
  </div>
  <div class="content">
    <!-- signup form  -->
    <div class="register-card">
      <form>
        <h3>註冊帳號</h3>
        <label
          >用戶姓名<br />
          <input id="name_up" type="text" name="name" /></label
        ><br />
        <label
          >EMAIL<br />
          <input id="email_up" type="text" name="email" /></label
        ><br />
        <label
          >密碼<br />
          <input id="password_up" type="password" name="password" /></label
        ><br />
        <div class="btn-area">
          <button id="sign_up_button" type="submit">註冊</button>
        </div>
      </form>
    </div>
    <!-- signin form -->
    <div class="signin-card">
      <form action="/user/signin" method="post">
        <h3>登入帳號</h3>
        <br />
        <label>EMAIL<br /><input id="email" type="text" name="email" /></label
        ><br />
        <label
          >密碼<br /><input
            id="password"
            type="password"
            name="password" /></label
        ><br />
        <div class="btn-area">
          <button id="sign_in_button" type="submit">登入</button>
        </div>
      </form>
    </div>
  </div>
  <%- include("components/footer") %>
  <script src="../js/userSign.js"></script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
