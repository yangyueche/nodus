    <form action="/articles/newmd" method="POST" enctype="multipart/form-data">
      <div
        id="articleContainer"
        class="
          container
          d-flex
          flex-column
          justify-content-center
          article-container
        "
      >
        <h1>新增文章</h1>
        <div class="form-floating mb-2 mt-2">
          <textarea name="title"
            class="form-control"
            placeholder="Leave a comment here"
            id="floatingTextarea"
          ></textarea>
          <label for="floatingTextarea">文章標題</label>
        </div>
        <div class="form-floating">
          <h3 class="my-2">文章內容</h3>
          <textarea
            name="markdown"
            class="form-control"
            placeholder="Leave a comment here"
            id="floatingTextarea2"
            style="height: 400px"
          ></textarea>
          <label for="floatingTextarea2"></label>
        </div>
      </div>

      <div
        class="my-4 d-flex flex-row article-container container justify-content-center"
      >
        <!-- 分類看板選單 -->
        <div class="container col-3 lead border p-3 mt-3">
          <label for="category" class="form-label">分類看板</label>
          <input
            class="form-control"
            list="categoryOptions"
            id="category"
            placeholder="選擇分類看板"
            name="category"
            required
          />
          <datalist id="categoryOptions">
            <option value="生活"></option>
            <option value="娛樂"></option>
            <option value="時尚"></option>
            <option value="社會"></option>
            <option value="財經"></option>
            <option value="感情"></option>
            <option value="商業"></option>
            <option value="藝術"></option>
            <option value="工作"></option>
            <option value="國際"></option>
            <option value="政治"></option>
            <option value="3C"></option>
            <option value="科技"></option>
            <option value="體育"></option>
            <option value="遊戲"></option>
            <option value="車"></option>
            <option value="迷因"></option>
            <option value="學習"></option>
          </datalist>
        </div>
        <!--  -->
        <!-- tag 選單 -->
        <div class="container col-3 lead border p-3 mt-3">
          <label for="tag" class="form-label" >新增標籤（Tag） <br>按空白鍵新增 </label>

              <input type="text" list="tagOptions" id="tag" placeholder="新增 Tag" name="tags" class="form-control tagin" data-separator=" " value="">

        </div>
        <div class="container col-3 lead border p-3 mt-3">
          <label for="articleCover" class="form-label">文章封面照片        <input
            class="form-control"
            type="file"
            id="articleCover"
            placeholder="新增文章封面照片"
            
          /></label>
        </div>
        <div
          class="
            d-flex
            container-fluid
            
            lead
            p-3
            mt-3
            align-items-center
            justify-content-center
          "
        >
          <button type="submit" class="flex-grow-1 btn btn-secondary">上傳！</button>
        </div>
    </form>
